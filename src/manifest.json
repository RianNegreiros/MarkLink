{
  "manifest_version": 3,
  "name": "MarkLink",
  "version": "1.3",
  "description": "Quickly generate links for your Markdown notes from web content.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Copy as Markdown link",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Copy current page as Markdown link"
    }
  }
}