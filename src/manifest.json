{
  "manifest_version": 3,
  "name": "MarkLink",
  "version": "1.3.1",
  "description": "Quickly generate links for your Markdown notes from web content.",
  "browser_specific_settings": {
    "gecko": {
      "id": "marklink@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Copy as Markdown link"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Copy current page as Markdown link"
    }
  }
}